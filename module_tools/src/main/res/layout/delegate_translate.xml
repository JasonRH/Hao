<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/delegate_translate_source"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="中文" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/delegate_translate_alternating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="{icon-alternating}"
            android:gravity="center" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/delegate_translate_target"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="英文" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/delegate_translate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:gravity="center"
                android:textCursorDrawable="@null" />

            <RelativeLayout
                android:id="@+id/delegate_translate_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:orientation="horizontal">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/delegate_translate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="{icon-youjiantou}"
                    android:layout_centerVertical="true"
                    android:textColor="@color/ToolsColorPrimary"
                    android:textSize="35sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/delegate_translate_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:text="{icon-chahao}"
                    android:textSize="25sp" />
            </RelativeLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/delegate_translated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textIsSelectable="true"
        android:textSize="18sp" />

</android.support.v7.widget.LinearLayoutCompat>